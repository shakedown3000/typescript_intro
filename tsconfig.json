{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    // ? sollte auf ESNext sein - letzte Version von ECMA-Script
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    // ? sollte false sein, damit types direkt exportiert werden k√∂nnen
    "isolatedModules": false,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}